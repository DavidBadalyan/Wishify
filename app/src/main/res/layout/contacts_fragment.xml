<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/birthdayCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACTS"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="#127C98"
                    android:padding="12dp"
                    android:paddingBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/person1Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="John Doe"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/birthday1Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feb 20"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginEnd="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/bell"
                            android:padding="7dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/pencil"
                            android:padding="7dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_red_dark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/person2Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jane Smith"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/birthday2Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mar 15"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginEnd="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/bell"
                            android:padding="7dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/pencil"
                            android:padding="7dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_red_dark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/person3Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Michael Lee"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/birthday3Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apr 10"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginEnd="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/bell"
                            android:padding="7dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/pencil"
                            android:padding="7dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_red_dark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/person4Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chris Evans"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/birthday4Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="May 12"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginEnd="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/bell"
                            android:padding="7dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/pencil"
                            android:padding="7dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_red_dark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/person5Name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sarah Johnson"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/birthday5Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jun 25"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginEnd="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/bell"
                            android:padding="7dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/red_circle_button"
                            android:drawableTint="@android:color/white"
                            android:drawableStart="@drawable/pencil"
                            android:padding="7dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_red_dark"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
