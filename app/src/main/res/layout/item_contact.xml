<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="8dp">
    
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="center_vertical|end"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@null">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/remindBd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/red_circle_button"
            android:drawableTint="@android:color/white"
            android:drawableStart="@drawable/bell"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customizeM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/red_circle_button"
            android:drawableStart="@drawable/pencil"
            android:drawableTint="@android:color/white"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/red_circle_button"
            android:drawableTint="@android:color/white"
            android:drawableStart="@drawable/delete"
            android:padding="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/birthday_list_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/birthday_item_bckg"
        android:clipToOutline="true" />

</FrameLayout>